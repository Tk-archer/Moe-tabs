::-webkit-scrollbar
  width 6px
  be transparent
  &-thumb
    background-color rgba(52, 73, 94, 0.2)
    border-radius 4px
  &-thumb:hover
    background-color rgba(52, 73, 94, 0.8)

@font-face
  src url("./28 Days Later.ttf")
  font-family "clock"

.main
  background-size cover
  background-attachment fixed
  -webkit-background-size cover
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 14px
  width 100%
  height 100%
  line-height 1.42857143
  color #333
  overflow hidden

/*
  ==========================
  topSites
  ==========================
*/
nav#topSites
  height 100%
  width 100%
  text-align center
  background-color rgba(255, 255, 255, 0.6)
  -webkit-box-shadow 0 5px 10px 0 rgba(50, 50, 50, 0.7)
  box-shadow 0 5px 10px 0 rgba(50, 50, 50, 0.7)

ul#topSites
  /*    max-height: 3em*/
  & li
    display inline
    margin 0.4em
  & li a
    text-decoration none
    text-align center
    vertical-align middle
    line-height 3em
    text-decoration-color #FFFFFF

a.top
  border: 1px solid rgba(0, 0, 0, 0)
  color #3e4558
  padding 0.3em
  overflow hidden
  -webkit-transition all 0.2s linear
  transition all 0.2s linear
  &:hover
    color #ffffff
    overflow visible
    text-shadow 0 0 1px rgba(255, 255, 255, 0.8)
    border 1px solid #a2c5ff
    background-color rgba(88, 144, 255, 0.80)
    -webkit-box-shadow 0 0 15px #61a4ff
    -webkit-transitiow all 0.2s linear

/*
===================
aside
===================
*/
aside
  position absolute
  right 0
  width 300px
  overflow hidden
  z-index -1

/*
===============================
time css
===============================
*/
div#time
  font-family "clock"
  text-shadow 1px 1px white, -1px -1px #666
  text-align right
  background-color #fff
  opacity 0.6

div#clock_div
  font-size 10em
  height 170px
  color #951828

div#date_div
  font-size 3em
  top 200px
  color #8527FA

/*
======================
option
======================
*/
#option
  background-color rgba(255, 255, 255, 0.8)
  height 650px
  width 100%
  right 0
  display none
  padding 20px 0
  overflow-y scroll
  & h2
    font-family "Segoe UI"
    background-color rgba(255, 255, 255, 0.3)
    -webkit-box-shadow 0 2px 5px 0 rgba(50, 50, 50, 0.3)
    padding-left 10px
    color #6D5757

/*
=======================
drop_area
=======================
*/
div#drop_area
  position relative
  margin 0 auto
  width 80%
  be #EAEAEA
  border 2px dashed #979494
  padding 10px
  height 150px
  &:hover
    opacity 0.5
    -webkit-transition all 0.2s linear
    transition all 0.2s linear

input#imgurl
  position absolute
  height 100%
  width 100%
  z-index 3
  opacity 0
  top 0
  left 0

/*
=======================
preview
=======================
*/
#preview
  position relative
  width 90%
  height 90%
  z-index 1
  top -40px
  & img
    overflow hidden
    height 100%

#up-button
  margin-top 10px
  position relative

/*
=====================
setting
=====================
*/
#setting
  margin-top 10px
  height 450px

div#select-group
  margin auto 10%
  clear both

.center
  text-align center
  margin 20px 0

.rig
  text-align right
  width 90%

bg-color(args...)
  background-color rgb(args)

.red
  bg-color(191, 184, 114)

.blue
  bg-color(114, 173, 191)

.green
  bg-color(191, 133, 114)

/*
=========================
color tab
=========================
*/
div#tab
  width 100%
  height 41px
  & div
    height 100%

.non
  background rgba(0, 0, 0, 0)
  width 100%

#tab div
  padding 0

#sd
  height 50%